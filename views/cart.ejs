<html>
<title>Cart</title>
<script>
    function myFunction() {
  alert("Thanks For Shopping");
    }
    </script>
    <script>
        function myFunction2() {
      alert("Product Removed From Your Cart");
        }
        </script>
<head>
  <h1 align="center" style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;color:black; text-decoration: underline;position:absolute;left:4%;top:1%;font-size:50px;">My Cart</h1>
</head>

<style>
  body{
            background: #ffcb55; background: -moz-linear-gradient(45deg,  #ffcb55 0%,#a7b492 50%,#768b9f 100%); background: -webkit-linear-gradient(45deg,  #ffcb55 0%,#a7b492 50%,#768b9f 100%); background: linear-gradient(45deg,  #ffcb55 0%,#a7b492 50%,#768b9f 100%);
          }
        div{
               background-image: linear-gradient(to top, #fddb92 0%, #d1fdff 100%);
                height:300px;
                width:350px;
                margin:0 auto;
                border:2px solid #000000;
                font-size:22px;
                font-family:Arial;
                
                
         }
</style>
<% if(carts.length>0) { %>

   
        <% for(var i=0;i<carts.length;i++) { %>
            
                <div align="center">
               <p>#<%= i+1 %></p>
                <p>Name : <%= carts[i].cname %></p>
                <p> Description : <%= carts[i].cdescription %></p>
                <p>Price : <%= carts[i].cprice %></p>
                <p>Quantity : <%= carts[i].cquantity %></p>
                <td>
                  <a href='/removefromcart/<%=carts[i]._id %>'><button type="button" onclick="myFunction2()"style="font-size:20px; margin:0 auto; background-color:green;color:white;border:2px solid white;">Remove Product</button></a>
              
            <br><br><br>
            <% } %>

                </div>
                <br><br>
                <a href='/checkout %>'><button type="button" onclick="myFunction()" style="font-size:20px; margin:0 auto; background-color:green;color:white;border:2px solid white;padding:10px;position:absolute;left:40%;">Checkout</button></a>
                <a href='/continueshopping %>'><button type="button" style="font-size:20px; margin:0 auto; background-color:green;color:white;border:2px solid white;padding:10px;position:absolute;left:48%;">Continue Shopping</button></a>

    <% } else { %>
      <a href='/checkout %>'><button type="button" style="font-size:20px; margin:0 auto; background-color:green;color:white;border:2px solid white;padding:10px;position:absolute;left:40%;top:47%">Checkout</button></a>
      <a href='/continueshopping %>'><button type="button" style="font-size:20px; margin:0 auto; background-color:green;color:white;border:2px solid white;padding:10px;position:absolute;left:48%;top:47%">Continue Shopping</button></a>
<% } %>

</html>